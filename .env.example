# Database Configuration
DATABASE_URL=postgresql://netbackup:changeme@postgres:5432/netbackup
POSTGRES_DB=netbackup
POSTGRES_USER=netbackup
POSTGRES_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-secret-key-for-jwt-change-this-in-production
ENCRYPTION_KEY=your-fernet-encryption-key-generate-with-cryptography
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Application Settings
APP_NAME=Network Config Backup System
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost

# Backup Configuration
BACKUP_BASE_PATH=/backups
MAX_CONCURRENT_BACKUPS=10
DEFAULT_RETENTION_DAYS=90
DEFAULT_SSH_TIMEOUT=60

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_TLS=true

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
